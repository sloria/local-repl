{
  "name": "local-repl",
  "version": "4.0.0",
  "description": "Project-specific REPL configuration",
  "license": "MIT",
  "repository": "sloria/local-repl",
  "author": {
    "name": "Steven Loria",
    "email": "sloria1@gmail.com",
    "url": "stevenloria.com"
  },
  "bin": {
    "local-repl": "cli.js"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "lint": "xo",
    "repl": "node cli.js",
    "test": "npm run lint && ava test/tests.js",
    "release": "np --no-publish"
  },
  "files": [
    "index.js",
    "cli.js"
  ],
  "keywords": [
    "cli",
    "repl",
    "console",
    "configuration",
    "shell"
  ],
  "dependencies": {
    "await-outside": "^2.1.2",
    "chalk": "^2.0.0",
    "lodash": "^4.17.4",
    "p-props": "^1.0.0",
    "parse-json": "^5.0.0",
    "req-cwd": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "np": "^7.0.0",
    "xo": "^0.40.0"
  },
  "repl": {
    "context": [
      {
        "name": "l",
        "module": "lodash"
      },
      {
        "name": "localRepl",
        "module": "./"
      }
    ],
    "enableAwait": true
  },
  "xo": {
    "space": true,
    "rules": {
      "no-multi-assign": 0,
      "eqeqeq": 0,
      "capitalized-comments": 0,
      "operator-linebreak": 0,
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "never"
        }
      ]
    }
  }
}
